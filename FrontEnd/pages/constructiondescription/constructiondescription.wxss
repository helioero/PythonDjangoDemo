.page {
  padding: 20rpx;
  background: #f7f7f7;
}

/* === 工程基本信息卡片 === */
.info-card {
  background: #ffffff;
  padding: 30rpx;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.06);
}

.row-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 38rpx;
  font-weight: 700;
  color: #333;
}

.project-code {
  font-size: 28rpx;
  color: #999;
}

.row-info {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  line-height: 50rpx;
  color: #555;
}

.row-info view {
  width: 50%;
}

.address {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* === 下方施工详情卡片 === */
.desc-card {
  background: linear-gradient(145deg, #ffffff, #f9f9f9);
  display: flex;
  margin-bottom: 25rpx;
  border-radius: 24rpx;
  padding: 25rpx;
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.06);
}

.scene-img {
  width: 240rpx;
  height: 240rpx;
  border-radius: 16rpx;
}

.desc-info {
  flex: 1;
  margin-left: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.desc-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 15rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.tag {
  background: #f0f0f0;
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

.desc-text {
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #555;
}

.flex-row {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
}

.green {
  color: #1AAD19;
  background: #f0f0f0;
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.red {
  color: #FF4D4F;
  background: #f0f0f0;
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
}
